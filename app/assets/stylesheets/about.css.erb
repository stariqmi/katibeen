.about_me_link {
    margin: 0px;
    float: left;
    padding: 0px;
    width: 37px;
    margin-right: 25px;
    display: block;
    height: 38px;
    overflow: hidden;
    background-image: url(<%= image_path "social_sprite.png" %>);
    background-position: 0px 0px;
}

.about_me_link:hover {
    background-position: 0px 38px;
}

